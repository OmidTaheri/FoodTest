<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.FoodTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        //color
        <item name="colorPrimary">@color/teal_600</item>
        <item name="colorPrimaryVariant">@color/teal_800</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/pink_700</item>
        <item name="colorSecondaryVariant">@color/pink_900</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="colorError">@color/pink_800</item>
        <item name="colorOnError">@color/white</item>

        <item name="foodTestSearchBarHintColor">@color/black_alpha_60</item>
        <item name="foodTestSearchBarTextColor">@color/black</item>

        ///typography
        <item name="textAppearanceHeadline1">@style/TextAppearance.FoodTest.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.FoodTest.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.FoodTest.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.FoodTest.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.FoodTest.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.FoodTest.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.FoodTest.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.FoodTest.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.FoodTest.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.FoodTest.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.FoodTest.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.FoodTest.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.FoodTest.Overline</item>


        //shape
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.FoodTest.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.FoodTest.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.FoodTest.LargeComponent
        </item>

        //system bars
        <item name="android:navigationBarColor" tools:targetApi="21">?attr/colorPrimaryVariant
        </item>
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
    </style>


    <style name="ShapeAppearance.FoodTest.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="ShapeAppearance.FoodTest.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ShapeAppearance.FoodTest.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>


    <style name="TextAppearance.FoodTest.Headline1" parent="TextAppearance.MaterialComponents.Headline1">

        <item name="fontFamily">@font/iran_sans_mobile_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">@dimen/material_text_size_headline_1_light</item>
