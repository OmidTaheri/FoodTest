    <style name="Widget.FoodTest.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">?attr/textAppearanceHeadline5</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorPrimary</item>

    </style>

    <style name="Widget.FoodTest.ListTitle" parent="TextAppearance.FoodTest.Headline6">
        <item name="android:textColor">?attr/colorOnBackground</item>
